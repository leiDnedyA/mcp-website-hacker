{
    "manifest_version": 3,
    "name": "MCP Web Query Bridge",
    "version": "1.0",
    "description": "Bridge between MCP server and webpage content",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "ws://localhost:8080/*",
        "<all_urls>"
    ]
} 